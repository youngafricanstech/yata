    <script>
        $(function () {
            $("#datepicker").datepicker({
                dateFormat: "yy-mm-dd", // Set the date format
                beforeShowDay: function (date) {
                    var currentDate = new Date();
                    var day = date.getDay();

                    // Disable past Tuesdays and Wednesdays
                    if (date < currentDate || (date.getDate() === currentDate.getDate() && date.getMonth() === currentDate.getMonth() && date.getFullYear() === currentDate.getFullYear())) {
                        return [false, 'ui-state-disabled'];
                    }

                    // Add specific classes for Tuesdays and Wednesdays
                    if (day == 2) {
                        return [true, 'ui-state-tuesday'];
                    } else if (day == 3) {
                        return [true, 'ui-state-wednesday'];
                    }
                    return [false, ''];
                }
            });

            $("#date-icon").click(function () {
                $("#datepicker").datepicker("show");
            });
        });

    </script>

