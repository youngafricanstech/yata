                                <div class="input-group" style="margin-top: -2.4rem">
                                    <input class="form-control" type="text" name="interviewdate" id="datepicker"
                                        class="form-control datepicker" placeholder="Select date" required>
                                    <i class="far fa-calendar-alt date-icon" id="date-icon"></i>
                                    <div class="valid-feedback">Interview Date field is valid!</div>
                                    <div class="invalid-feedback">Interview Date field cannot be blank!</div>

                                </div>

                            </div>



                            <style>
                                #input-group {
                                    position: relative;
                                }

                                .datepicker {
                                    padding-right: 30px;
                                    position: relative;
                                    /* Adjust as needed */
                                }

                                .date-icon {
                                    position: absolute;
                                    top: 50%;
                                    right: 10px;
                                    /* Adjust as needed */
                                    transform: translateY(-50%);
                                    cursor: pointer;
                                    z-index: 2;
                                    /* Ensure the icon is above the input */
                                }

                                .ui-datepicker-calendar .ui-state-tuesday,
                                .ui-datepicker-calendar .ui-state-wednesday {
                                    background: #007bff;
                                    border: 1px solid #0056b3;
                                }
                            </style>

                            <script>
                                $(function () {
                                    $("#datepicker").datepicker({
                                        dateFormat: "yy-mm-dd", // Set the date format
                                        beforeShowDay: function (date) {
                                            var currentDate = new Date();
                                            var day = date.getDay();

                                            // Disable past Tuesdays and Wednesdays
                                            if (date < currentDate || (date.getDate() === currentDate.getDate() && date.getMonth() === currentDate.getMonth() && date.getFullYear() === currentDate.getFullYear())) {
                                                return [false, 'ui-state-disabled'];
                                            }

                                            // Add specific classes for Tuesdays and Wednesdays
                                            if (day == 2) {
                                                return [true, 'ui-state-tuesday'];
                                            } else if (day == 3) {
                                                return [true, 'ui-state-wednesday'];
                                            }
                                            return [false, ''];
                                        }
                                    });

                                    $("#date-icon").click(function () {
                                        $("#datepicker").datepicker("show");
                                    });
                                });

                            </script>


